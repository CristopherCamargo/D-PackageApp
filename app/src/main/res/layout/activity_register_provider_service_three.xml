<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_register_provider_service_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="team.software.d_packageapp.RegisterProviderServiceThree">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_vehicle"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/size_image_vehicle"
                android:contentDescription="@string/image_vehicle_one"
                android:id="@+id/image_vehicle_one"
                app:srcCompat="@mipmap/car"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:contentDescription="@string/image_vehicle_two"
                android:id="@+id/image_vehicle_two"
                app:srcCompat="@mipmap/car" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:contentDescription="@string/image_vehicle_three"
                android:id="@+id/image_vehicle_three"
                app:srcCompat="@mipmap/car"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_vehicle"
            android:id="@+id/container_placa_ano"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/til_placa">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="6"
                    android:hint="@string/placa"
                    android:id="@+id/inputPlaca"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/til_ano">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="4"
                    android:hint="@string/year"
                    android:id="@+id/inputAno"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerModelo"
            android:spinnerMode="dropdown"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_below="@id/container_placa_ano"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerCategoria"
            android:spinnerMode="dropdown"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_below="@id/spinnerModelo"/>

        <CheckBox
            android:text="@string/term_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerCategoria"
            android:layout_centerHorizontal="true"
            android:id="@+id/checkBoxTermCondition"
            android:layout_margin="@dimen/activity_vertical_margin"/>

        <Button
            android:text="@string/sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBoxTermCondition"
            android:id="@+id/buttonRegistrar"
            android:background="@color/colorPrimary"/>

    </RelativeLayout>

</ScrollView>

