<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="team.software.d_packageapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Raidy -->
        <activity
            android:name=".RegisterClient"
            android:label="@string/register"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".RegisterProviderServiceOne"
            android:label="@string/step_one"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".RegisterProviderServiceTwo"
            android:label="@string/step_two"
            android:parentActivityName=".RegisterProviderServiceOne">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RegisterProviderServiceOne" />
        </activity>
        <activity android:name=".RegisterProviderServiceThree"
            android:label="@string/step_three"
            android:parentActivityName=".RegisterProviderServiceTwo">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RegisterProviderServiceTwo" />
        </activity>

        <!--  -->
        <activity android:name=".HomeClient" />
        <activity android:name=".RequestPackage" />
        <activity android:name=".LoginPreview" />
        <activity android:name=".RegisterPaymentMethod" />

    </application>

</manifest>